{% extends 'base.html.twig' %}

{% block title %}Stock Movement index{% endblock %}

{% set current_page = 'aside-menu-stock-movements' %}

{% block additional_js %}
    {{ include('partials/active_menu_script.html.twig') }}
{% endblock %}

{% block body %}
    <h3 class="fw-bold py-3 mb-4 ms-3">
        Stock Request
    </h3>
    <!-- Stock Movement List Card -->
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Stock Movements</h5>
            <a href="{{ path('app_stock_request_index') }}" class="btn btn-primary">
                <i class="bx bx-arrow-back me-0 me-sm-1"></i>
                <span class="d-none d-sm-inline-block">Stock Requests</span>
            </a>
        </div>
        <div class="table-responsive text-nowrap scrollable-container overflow-hidden">
            <table class="table">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Status</th>
                    <th>Remarks</th>
                    <th>CreatedAt</th>
                    <th>UpdatedAt</th>
                    <th>actions</th>
                </tr>
                </thead>
                <tbody>
                {% for stock_movement in stock_movements %}
                    <tr>
                        <td>{{ stock_movement.id }}</td>
                        <td>{{ stock_movement.status }}</td>
                        <td>{{ stock_movement.remarks }}</td>
                        <td>{{ stock_movement.createdAt ? stock_movement.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                        <td>{{ stock_movement.updatedAt ? stock_movement.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                        <td>
                            <a href="{{ path('app_stock_movement_show', {'id': stock_movement.id}) }}">show</a>
                            <a href="{{ path('app_stock_movement_edit', {'id': stock_movement.id}) }}">edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="10" class="text-center">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

    </div>
{% endblock %}

