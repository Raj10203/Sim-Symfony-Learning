<div class="container-fluid">
    {{ form_start(stockRequestForm) }}
    <div class="row">
        <div class="col-md-4 col-12 mb-3">
            <div class="form-group">
                {{ form_row(stockRequestForm.status) }}
            </div>
        </div>
        <div class="col-md-4 col-12 mb-3">
            <div class="form-group">
                {{ form_label(stockRequestForm.fromSite) }}
                {{ form_widget(stockRequestForm.fromSite) }}
            </div>
        </div>
        <div class="col-md-4 col-12 mb-3">
            <div class="form-group">
                {{ form_label(stockRequestForm.toSite) }}
                {{ form_widget(stockRequestForm.toSite) }}
            </div>
        </div>
    </div>
    <div class="d-flex">
        <div class="mt-3">
            {{ form_widget(stockRequestForm._token) }} {# optional hidden CSRF field #}
        </div>
        <button class="btn btn-primary">{{ button_label|default('Save') }}</button>
        {{ form_end(stockRequestForm) }}
        {% if button_label is defined %}
            {{ include('stock_request/_delete_form.html.twig') }}
        {% endif %}
    </div>
</div>

