{% extends 'base.html.twig' %}

{% block title %}StockMovementItem index{% endblock %}

{% block body %}
    <h1>StockMovementItem index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Quantity</th>
                <th>Remarks</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for stock_movement_item in stock_movement_items %}
            <tr>
                <td>{{ stock_movement_item.id }}</td>
                <td>{{ stock_movement_item.quantity }}</td>
                <td>{{ stock_movement_item.remarks }}</td>
                <td>{{ stock_movement_item.createdAt ? stock_movement_item.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ stock_movement_item.updatedAt ? stock_movement_item.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_stock_movement_item_show', {'id': stock_movement_item.id}) }}">show</a>
                    <a href="{{ path('app_stock_movement_item_edit', {'id': stock_movement_item.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_stock_movement_item_new') }}">Create new</a>
{% endblock %}
