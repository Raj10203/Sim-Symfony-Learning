<div class="container-fluid">
    {{ form_start(form) }}
    <div class="row">
        {% for field in form %}
            {% if field != form._token %}
            <div class="col-md-6 col-12 mb-3">
                <div class="form-group">
                    {{ form_row(field) }}
                </div>
            </div>
            {% endif %}
        {% endfor %}
    </div>
    <div class="d-flex">
        <div class="mt-3">
            {{ form_widget(form._token) }}
        </div>
        <button class="btn btn-primary">{{ button_label|default('Save') }}</button>
        {{ form_end(form) }}
        <div class="mx-2">
            {{ include('stock_request_items/_delete_form.html.twig') }}
        </div>
    </div>
</div>