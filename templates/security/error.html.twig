{% extends 'auth.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
    <div class="container-xxl container-p-y d-flex justify-content-center">
        <div class="misc-wrapper">
            {% for error in app.flashes('error') %}
                <h1 class="mb-2 mx-2 text-center" style="line-height: 6rem; font-size: 6rem">{{ error.code }}</h1>
                <h4 class="mb-2 mx-2 text-center">{{ error.title }} ⚠️</h4>
                <p class="mb-6 mx-2 text-center">{{ error.message }}</p>
            {% endfor %}
            <div class="d-flex justify-content-center">
                <a href="javascript:history.back()" class="btn btn-primary">Back</a>
            </div>
            <div class="mt-6">
                <img src="{{ asset('bundles/sneat/assets/img/illustrations/page-misc-error-light.png') }}"
                     alt="page-misc-error-light"
                     width="500"
                     class="img-fluid"/>
            </div>
        </div>
    </div>
{% endblock %}
