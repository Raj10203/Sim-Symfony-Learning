<form method="post" action="{{ path('app_inventory_delete', {'id': inventory.id}) }}" id="delete_site_form"
      class="delete-form" data-product-name="{{ inventory.product.name|default('this item') }}">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ inventory.id) }}">
    <button type="submit" class="btn btn-danger">Delete</button>
</form>
