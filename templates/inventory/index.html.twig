{% extends 'base.html.twig' %}

{% set current_page = 'aside-menu-inventory-inventory' %}

{% block title %}Sites index{% endblock %}

{% block body %}
    <h3 class="fw-bold py-3 mb-4 ms-3">
        Inventory
    </h3>
    <!-- Sites List Card -->
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Inventories</h5>
            <div>
                {% if is_granted('ROLE_INVENTORY_CRUD') %}
                    <a href="{{ path('app_inventory_new') }}" class="btn btn-primary">
                        <i class="bx bx-plus me-0 me-sm-1"></i>
                        <span class="d-none d-sm-inline-block">Add Stock</span>
                    </a>
                {% endif %}
                <a href="{{ path('app_stock_request_new') }}" class="btn btn-primary">
                    <i class="bx bx-plus me-0 me-sm-1"></i>
                    <span class="d-none d-sm-inline-block">New Stock Request</span>
                </a>
            </div>
        </div>
        <div class="table-responsive text-nowrap scrollable-container overflow-hidden p-2">
            <table class="datatables-basic table table-bordered table-responsive dataTable dtr-column collapsed" id="inventoryTable">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Product</th>
                    <th>Site</th>
                    <th>Quantity</th>
                    <th>CreatedAt</th>
                    <th>UpdatedAt</th>
                </tr>
                </thead>
            </table>
        </div>
    </div>
{% endblock %}

{% block additional_js %}
    {{ include('partials/active_menu_script.html.twig') }}
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            $('#inventoryTable').DataTable({
                processing: true,
                serverSide: true,
                ordering: true,
                ajax: {
                    url: '/api/inventory/datatable', // Replace with your server endpoint
                    type: 'POST', // Specifies the HTTP method as POST
                },
                columns: [
                    {data: 'id'},
                    {data: 'product'},
                    {data: 'site'},
                    {data: 'quantity'},
                    {data: 'updatedAt'},
                    {data: 'createdAt'}
                ]
            });
        });
    </script>
{% endblock %}
