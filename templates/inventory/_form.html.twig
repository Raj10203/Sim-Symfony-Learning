<div class="container-fluid">
    {{ form_start(form) }}
    <div class="row">
        <div class="col-md-4 col-12 mb-3">
            <div class="form-group">
                {{ form_label(form.product, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.product) }}
            </div>
        </div>
        <div class="col-md-4 col-12 mb-3">
            <div class="form-group">
                {{ form_label(form.site, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.site) }}
            </div>
        </div>
        <div class="col-md-4 col-12 mb-3">
            <div class="form-group">
                {{ form_label(form.quantity, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.quantity) }}
            </div>
        </div>
    </div>
    <div class="d-flex flex-wrap col-md-2 col-12 mb-3 align-items-end">
        <div class="d-none">
            {{ form_widget(form._token) }}
        </div>
        <div class="m-1">
            <button class="btn btn-primary">{{ button_label|default('Save') }}</button>
        </div>
        {{ form_end(form) }}
        {% if button_label is defined %}
            <div class="m-1">
                {{ include('inventory/_delete_form.html.twig') }}
            </div>
        {% endif %}
    </div>
</div>
