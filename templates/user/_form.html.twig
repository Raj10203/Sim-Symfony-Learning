<div class="container-fluid">
    {{ form_start(form) }}
    <div class="row">
        <div class="col-md-6 col-12 mb-3">
            <div class="form-group">
                {{ form_label(form.firstName, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.firstName, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="col-md-6 col-12 mb-3">
            <div class="form-group">
                {{ form_label(form.lastName, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.lastName, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 col-12 mb-3">
            <div class="form-group">
                {{ form_label(form.email, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="col-md-6 col-12 mb-3">
            <div class="form-group">
                {{ form_label(form.active) }}
                {{ form_widget(form.active) }}
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 col-12 mb-3">
            <div class="form-group">
                {{ form_label(form.site) }}
                {{ form_widget(form.site) }}
            </div>
        </div>
        <div class="col-md-6 col-12 mb-3">
            <div class="form-group">
                {{ form_label(form.roles) }}
                {{ form_widget(form.roles, {'attr': {'class': 'select2-dropdown-multiple form-select'}}) }}
            </div>
        </div>
    </div>
    <div class="d-flex">
        <div class="mt-3">
            {{ form_widget(form._token) }}
        </div>
        <button class="btn btn-primary">{{ button_label|default('Save') }}</button>
        {{ form_end(form) }}
        {% if button_label is defined %}
            {{ include('user/_delete_form.html.twig') }}
        {% endif %}
    </div>
</div>
