<div class="mx-1">
    <form method="post" action="{{ path('app_user_delete', {'id': user.id}) }}" id="delete_user_form"
          class="delete-form" data-product-name="{{ user.firstName|default('this item') }}">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
        <button type="submit" class="btn btn-danger">Delete</button>
    </form>
</div>