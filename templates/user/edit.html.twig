{% extends 'base.html.twig' %}

{% block title %}Edit User{% endblock %}

{% set current_page = 'aside-menu-users' %}

{% block additional_js %}
    {{ include('partials/active_menu_script.html.twig') }}
{% endblock %}

{% block body %}
    <h3 class="fw-bold py-3 mb-4 ms-3">
        Sites
    </h3>
    <div class="card pb-5">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Edit Site</h5>
            <div>
                <a href="{{ path('app_user_index') }}" class="btn btn-secondary">
                    <i class="bx bx-arrow-back me-0 me-sm-1"></i>
                    <span class="d-none d-sm-inline-block">Back to List</span>
                </a>
                <a href="{{ path('app_auth_register') }}" class="btn btn-primary">
                    <i class="bx bx-plus me-0 me-sm-1"></i>
                    <span class="d-none d-sm-inline-block">Add User</span>
                </a>
            </div>
        </div>
        {{ include('user/_form.html.twig', {'button_label': 'Update'}) }}
    </div>
{% endblock %}
