{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% set current_page = 'aside-menu-users' %}

{% block additional_js %}
    {{ include('partials/active_menu_script.html.twig') }}
{% endblock %}

{% block body %} <h3 class="fw-bold py-3 mb-4 ms-3">
    Sites
</h3>
    <!-- Category List Card -->
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Users</h5>
            <a href="{{ path('app_auth_register') }}" class="btn btn-primary">
                <i class="bx bx-plus me-0 me-sm-1"></i>
                <span class="d-none d-sm-inline-block">Add User</span>
            </a>
        </div>
        <div class="table-responsive text-nowrap">
            <table class="table">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Email</th>
                    <th>Roles</th>
                    <th>Site</th>
                    <th>FirstName</th>
                    <th>LastName</th>
                    <th>Is Verified</th>
                    <th>actions</th>
                    <th>Updated At</th>
                    <th>Created At</th>
                </tr>
                </thead>
                <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ user.id }}</td>
                        <td>{{ user.email }}</td>
                        <td class="text-wrap">
                            {% set roles = user.roles %}
                            {{ roles | join(', ') }}
                        </td>
                        <td>{{ user.site.name }}</td>
                        <td>{{ user.firstName }}</td>
                        <td>{{ user.lastName }}</td>
                        <td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
                        <td>
                            <a href="{{ path('app_user_show', {'id': user.id}) }}" class="btn btn-primary">
                                <i class='bx bx-show-alt'></i>
                            </a>
                            <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-success">
                                <i class='bx bxs-edit'></i>
                            </a>
                        </td>
                        <td>{{ user.createdAt ? user.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                        <td>{{ user.updatedAt ? user.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="8">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
