{% extends 'auth.html.twig' %}

{% block title %}Register{% endblock %}

{% block content %}
    <h4 class="mb-1">Adventure starts here ðŸš€</h4>
    <p class="mb-6">Make your app management easy and fun!</p>

    {{ form_errors(registrationForm) }}
    {{ form_start(registrationForm) }}
    <div class="form-group my-4">
        {{ form_row(registrationForm.email) }}
    </div>

    <div class="form-group my-4">
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
    </div>

    <div class="form-group my-4">
        {{ form_row(registrationForm.firstName, {
        }) }}
    </div>

    <div class="form-group my-4">
        {{ form_row(registrationForm.lastName, {
        }) }}
    </div>

    <div class="form-group my-4">
        {{ form_label(registrationForm.site) }}
        {{ form_widget(registrationForm.site) }}
    </div>

    <div class="form-group my-4">
        {{ form_label(registrationForm.roles) }}
        {{ form_widget(registrationForm.roles, {'attr': {'class': 'select2-dropdown-multiple'}}) }}
    </div>

    <button class="btn btn-primary d-grid w-100">Sign up</button>
    {{ form_end(registrationForm) }}

    <p class="text-center">
        <span>Already have an account?</span>
        <a href="{{ path('app_auth_login') }}">
            <span>Sign in instead</span>
        </a>
    </p>
{% endblock %}
