{% extends 'auth.html.twig' %}

{% block title %}Register{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        #my-form .select2-containerâ€“default .select2-selectionâ€“single {
            border: none;
        }
        .select2-container--default.select2-container--focus .select2-selection--multiple {
            /*border: none;*/
            border: solid #696cff 1px;
            box-shadow: 0 0 0 1px #696cff;
        }
        .select2-results__option--highlighted {
            background-color: #696cff !important;
            color: white !important;
        }
        .select2-container {
            width: 100% !important;
        }
    </style>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            $('.select2-dropdown').select2({
                dropdownCssClass: "custom-dropdown",
                placeholder: 'Select roles',
                allowClear: true,
                multiple: true,
                closeOnSelect: false,
                templateResult: function (data) {
                    return data.text;
                },
                templateSelection: function (data) {
                    return data.text;
                }
            });
        });

    </script>

{% endblock %}

{% block content %}
    <h4 class="mb-1">Adventure starts here ðŸš€</h4>
    <p class="mb-6">Make your app management easy and fun!</p>

    {{ form_errors(registrationForm) }}
    {{ form_start(registrationForm) }}
    <div class="form-group my-4">
        {{ form_row(registrationForm.email) }}
    </div>

    <div class="form-group my-4">
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
    </div>

    <div class="form-group my-4">
        {{ form_row(registrationForm.firstName, {
        }) }}
    </div>

    <div class="form-group my-4">
        {{ form_row(registrationForm.lastName, {
        }) }}
    </div>

    <div class="form-group my-4">
        {{ form_row(registrationForm.site, {
        }) }}
    </div>

    <div class="form-group my-4">
        {{ form_label(registrationForm.roles) }}
        {{ form_widget(registrationForm.roles, {'attr': {'class': 'select2-dropdown '}}) }}
    </div>

    <button class="btn btn-primary d-grid w-100">Sign up</button>
    {{ form_end(registrationForm) }}

    <p class="text-center">
        <span>Already have an account?</span>
        <a href="{{ path('app_auth_login') }}">
            <span>Sign in instead</span>
        </a>
    </p>
{% endblock %}
