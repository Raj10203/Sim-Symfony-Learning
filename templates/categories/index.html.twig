{% extends 'base.html.twig' %}

{% set current_page = 'aside-menu-categories' %}

{% block title %}Categories index{% endblock %}

{% block additional_js %}
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            $('#admin-li').addClass('active open');
        });
    </script>
{% endblock %}

{% block body %}
    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Product /</span> Categories
    </h4>
    <!-- Category List Card -->
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Categories</h5>
            <a href="{{ path('app_categories_new') }}" class="btn btn-primary">
                <i class="bx bx-plus me-0 me-sm-1"></i>
                <span class="d-none d-sm-inline-block">Add Category</span>
            </a>
        </div>
        <div class="table-responsive text-nowrap">
            <table class="table">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Active</th>
                    <th>CreatedAt</th>
                    <th>UpdatedAt</th>
                    <th>actions</th>
                </tr>
                </thead>
                <tbody>
                {% for category in categories %}
                    <tr>
                        <td>{{ category.id }}</td>
                        <td>{{ category.name }}</td>
                        <td>{{ category.description }}</td>
                        <td>{{ category.active ? 'Yes' : 'No' }}</td>
                        <td>{{ category.createdAt ? category.createdAt|date('d-m-Y H:i:s') : '' }}</td>
                        <td>{{ category.updatedAt ? category.updatedAt|date('d-m-Y H:i:s') : '' }}</td>
                        <td>
                            <a href="{{ path('app_categories_show', {'id': category.id}) }}">show</a>
                            <a href="{{ path('app_categories_edit', {'id': category.id}) }}">edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="8" class="text-center">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
