<div class="mx-1">
    <form method="post" action="{{ path('app_sites_delete', {'id': site.id}) }}" id="delete_site_form"
          class="delete-form" data-product-name="{{ site.name|default('this item') }}">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ site.id) }}">
        <button type="submit" class="btn btn-danger">Delete</button>
    </form>
</div>