{% extends 'base.html.twig' %}

{% set current_page = 'aside-menu-sites' %}

{% block title %}New Sites{% endblock %}

{% block additional_js %}
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            $('#admin-li').addClass('active open');
        });
    </script>
{% endblock %}

{% block body %}
    <h3 class="fw-bold py-3 mb-4 ms-3">
        Sites
    </h3>
    <div class="card pb-5">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">New Site</h5>
            <a href="{{ path('app_sites_index') }}" class="btn btn-secondary">
                <i class="bx bx-arrow-back me-0 me-sm-1"></i>
                <span class="d-none d-sm-inline-block">Back to List</span>
            </a>
        </div>
        {{ include('sites/_form.html.twig') }}
    </div>
{% endblock %}
