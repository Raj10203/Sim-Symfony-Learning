<div class="container-fluid">
    {{ form_start(form) }}
    <div class="row">
        <div class="col-md-6 col-12 mb-3">
            <div class="form-group">
                {{ form_label(form.name, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.name) }}
            </div>
        </div>
        <div class="col-md-6 col-12 mb-3">
            <div class="form-group">
                {{ form_label(form.active, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.active) }}
            </div>
        </div>
    </div>
    <div class="mb-3">
        <div class="form-group">
            {{ form_label(form.description, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.description) }}
        </div>
    </div>
    <div class="mb-3 row">
        <div class="col-md-6 col-12 mb-3">
            <div class="form-group">
                {{ form_label(form.category, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.category) }}
            </div>
        </div>
        <div class="col-md-6 col-12 mb-3">
            <div class="form-group">
                {{ form_label(form.unit, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.unit) }}
            </div>
        </div>
    </div>
    <div class="d-flex">
        <div class="mt-3">
            {{ form_widget(form._token) }} {# optional hidden CSRF field #}
        </div>
        <button class="btn btn-primary">{{ button_label|default('Save') }}</button>
        {{ form_end(form) }}
    </div>
</div>
